<section class="container contact-section">
    <h1>Contact Form</h1>
    <%= form_for @contact do |form| %>
        <div class="col-md-6">
            <%= form.label :name %>
            <br>
            <%= form.text_field :name, required: true, class: "contact-form-text-area" %>
            <br>

            <%= form.label :email %>
            <br>
            <%= form.text_field :email, required: true, class: "contact-form-text-area" %>
            <br>

            <%= form.label :message %>
            <br>
            <%= form.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",             placeholder: "Send me a message"%>
            <br>

            <div class= "d-none">
                <%= form.label :nickname %>
                <%= form.text_field :nickname, :hint => 'Leave this field blank!' %>
            </div>

            <%= form.submit 'Send Message', class: 'btn btn-primary' %>
        </div>
    <% end %>
</section>