<section class="container contact-section">
    <h2 class="d-flex justify-content-center">Contact Form</h2>
    <div class="contact-form-container">
        <%= form_for @contact, html: {class: "w-100"} do |form| %>
            <div class="form-group">
                <small class="font-weight-bold"><%= form.label :name %></small>
                <br>
                <%= form.text_field :name, required: true, class: "form-control" %>
            </div>

            <div class="form-group">
                <small class="font-weight-bold"><%= form.label :email %></small>
                <br>
                <%= form.text_field :email, required: true, class: "form-control" %>
            </div>

            <div class="form-group">
                <small class="font-weight-bold"><%= form.label :message %></small>
                <br>
                <%= form.text_area :message, rows: 8, cols: 40, required: true, class: "form-control" %>
            </div>

            <div class= "d-none">
                <small class="font-weight-bold"><%= form.label :nickname %></small>
                <%= form.text_field :nickname, :hint => "Leave this field blank!" %>
            </div>

            <div class="actions">
                <%= form.submit "Submit", class: "btn btn-primary w-100" %>
            </div>
        <% end %>
    </div>
</section>