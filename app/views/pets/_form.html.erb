<%= form_with model: @pet, local: true do |form| %>
    <div class="field">
        <%= form.label :name %>
        <br />
        <%= form.text_field :name %>
    </div>

    <div class="field">
        <%= form.label :category_id %>
        <br />
        <%= form.select :category_id, @categories.map {|category| [format_category(category.name), category.id]} %>
    </div>

    <div class="field">
        <%= form.label :description %>
        <br />
        <%= form.text_area :description %>
    </div>

    <div class="field">
        <%= form.label :picture %>
        <br />
        <%= form.file_field :picture, accept: "image/png, image/jpg, image/jpeg" %>
    </div>

    <br />

    <div class="field">
        <%= form.submit %>
    </div>
<% end %>

<% if current_page?(:controller => 'pets', :action => 'new') %>
    <div>
        <%= link_to "Back", root_url %>
    </div>
<% elsif current_page?(:controller => 'pets', :action => 'edit') %>
    <div>
        <%= link_to "Back", pet_path(@pet.id) %>
    </div>
<% end %>