<h1>
    Pets
</h1>
<section>
    <div>
        <% @pets.each do |pet| %>
            <div>
                <div>
                    <%= image_tag pet.picture.attached? ? pet.picture : 'cozynest_image_default.png', style: "width: 400px;", alt: pet.name %>
                    <div>
                        <h5>
                            <%= pet.name %>
                        </h5>
                        <p>
                            <%= pet.description %>
                        </p>
                        <div>
                            <%= link_to "See More", pet_path(pet.id) %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</section>