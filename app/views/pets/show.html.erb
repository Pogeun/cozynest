<section>
    <div>
        <div>
            <%= image_tag @pet.picture.attached? ? @pet.picture : 'cozynest_image_default.jpg', style: "width: 400px;", alt: @pet.name %>
        </div>
    </div>
    <div>
        <h1>
            <%= @pet.name %>
        </h1>
        <p>
            <%= format_category(@pet.category.name) %>
        </p>
        <p>
            <%= @pet.description %>
        </p>
        <% if current_user %>
            <% if current_user.shelter? &&  %>
                <% if current_user.id == @pet.shelter_id %>
                    <% if @pet.guardian %>
                        <div>
                            Current fosterer: <%= @pet.guardian.username %>
                        </div>
                    <% else %>
                        <div>
                            <%= link_to "Review Foster Request", foster_requests_per_pet_path(@pet.id) %>
                        </div>
                    <% end %>
                    <div>
                        <%= link_to "Edit", edit_pet_path(@pet.id) %>
                        |
                        <%= link_to "Delete", @pet, method: :delete, data: {confirm: "Are you sure?"} %>
                    </div>
                <% end %>
            <% elsif current_user.guardian? %>
                <% if not @pet.guardian %>
                    <div>
                        <%= link_to "Foster", new_foster_request_path(@pet.id) %>
                    </div>
                <% elsif current_user == @pet.guardian %>
                    <div>
                        <%= link_to "End Fostering", end_foster_request_path(@pet.id) %>
                    </div>
                <% end %>
            <% end %>
        <% end %>
        <div>
            <%= link_to 'Back', pets_path %>
        </div>
    </div>
</section>
<section>
    Comments:
    <% @pet.reviews.each do |review| %>
        <div>
            <%= "#{review.reviewer.username} (#{format_time(review.created_at)}):" %>
        </div>
        <div>
            <%= review.comment != "" ? review.comment : "None" %>
        </div>
    <% end %>
</section>