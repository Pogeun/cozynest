<section class="devise-section">
    <h2 class="d-flex justify-content-center">Forgot your password?</h2>
    <div class="d-flex shadow bg-white rounded">
        <div class="forgot-password">
            <%= image_tag "cozynest_devise.jpg", class: "width-100p height-auto" %>
        </div>
        <div class="forgot-password form">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "width-100p" }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.submit "Reset password", class: "btn btn-primary width-100p" %>
                </div>
            <% end %>
        </div>
    </div>
</section>