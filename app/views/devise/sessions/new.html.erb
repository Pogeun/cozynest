<section class="container devise-section">
    <h2 class="d-flex justify-content-center">Log in</h2>
    <div class="d-flex shadow bg-white rounded devise-block">
        <div class="w-50 devise-image-container">
            <%= image_tag "cozynest_image_default.jpg", class: "w-100 h-auto devise-image" %>
        </div>
        <div class="w-50 devise-form-container">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-100"}) do |form| %>
                <div class="form-group">
                    <%= form.label :email, "Email address" %>
                    <br />
                    <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= form.label :password %>
                    <br />
                    <%= form.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
                </div>

                <% if devise_mapping.rememberable? %>
                    <div class="form-check form-group">
                        <%= form.check_box :remember_me, class: "form-check-input" %>
                        <%= form.label :remember_me, class: "form-check-label" %>
                    </div>
                <% end %>

                <div class="actions form-group">
                    <%= form.submit "Log in", class: "btn btn-primary w-100" %>
                </div>

                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <div class="form-group">
                        Not a member yet? <%= link_to "Sign up", new_registration_path(resource_name) %>
                    </div>
                <% end %>
                
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <div class="form-group">
                        <%= link_to "Forgot password?", new_password_path(resource_name) %>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</section>