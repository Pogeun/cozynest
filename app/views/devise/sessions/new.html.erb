<h2>Log in</h2>

<section class="devise-section">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
        <div class="form-group">
            <%= form.label :email, "Email address" %>
            <br />
            <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :password %>
            <br />
            <%= form.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
            <div class="form-check">
                <%= form.check_box :remember_me, class: "form-check-input" %>
                <%= form.label :remember_me, class: "form-check-label" %>
            </div>
        <% end %>

        <div class="actions">
            <%= form.submit "Log in", class: "btn btn-primary" %>
        </div>
    <% end %>

    <br />

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name) %>
    <% end %>
    
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    <% end %>
</section>