<% if current_user.shelter? %>
    <%= form_with url: approve_foster_request_path, method: :patch do |form| %>
        <div>
            <%= form.label :pet_name, "Pet name: #{@foster_request.pet.name}" %>
        </div>

        <div>
            <%= form.label :comment %>
            <br />
            <%= @foster_request.comment %>
        </div>

        <% if not @foster_request.pet.guardian %>
            <div>
                <%= form.button "Accept Foster Request" %>
            </div>
        <% end %>
    <% end %>
<% else %>
  
<% end %>

<%= link_to "Back", foster_requests_per_pet_path(@foster_request.pet_id) %>